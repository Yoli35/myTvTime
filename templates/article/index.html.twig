{% extends 'base.html.twig' %}

{% block title %}myTvTime::{{ 'Blog'|trans }}{% endblock %}
{% block morecss %}
{% endblock %}

{% block body %}
    <div class="container">

        {{ include('blocks/pageHeader.html.twig') }}

        <div class="blog">
            <div class="header"></div>

            <nav aria-label="{{ 'Navigation'|trans }}" class="nav-breadcrumb" style="--bs-breadcrumb-divider: 'â—¦';">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'Movies'|trans }}</a></li>
                    {{ include('blocks/movie/bracket.html.twig') }}
                    <li class="breadcrumb-item active">{{ 'Blog'|trans }}</li>
                    <li class="breadcrumb-item"><a href="{{ path('app_article_image_index') }}">{{ 'Images'|trans }}</a></li>
                </ol>
            </nav>

            <div class="content">
                <div class="articles">
                    {% if articles|length %}
                        {% for article in articles %}
                            {{ include('/blocks/article/apercu.html.twig') }}
                        {% endfor %}
                    {% else %}
                        <div class="nothing">
                            <div class="to-show">
                                {{ 'Nothing to show yet'|trans }}
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="tools">

                </div>
            </div>
        </div>

        {{ include('blocks/pageFooter.html.twig') }}

    </div>
{% endblock %}
