<form method="post" action="{{ path('app_article_image_delete', {'id': article_image.id}) }}" onsubmit="return confirm({{ 'Are you sure you want to delete this item'|trans }});">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article_image.id) }}">
    <div class="btn-group" role="group" aria-label="{{ 'Delete'|trans }} / {{ 'back to list'|trans }}">
        <div class="btn btn-secondary">
            <a href="{{ path('app_article_image_index') }}">
                <i class="fa-solid fa-arrow-left"></i>
                {{ 'back to list'|trans }}
            </a>
        </div>
        <button class="btn btn-danger">
            <i class="fa-solid fa-trash-can"></i>
            {{ 'Delete'|trans }}
        </button>
    </div>
</form>
