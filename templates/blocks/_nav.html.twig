<nav class="nav-breadcrumb" {% if style is defined %}style="{{ style }}" {% endif %}aria-label="{{ 'Navigation'|trans }}">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'Home'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_movie_list') }}">{{ 'Movies'|trans }}</a></li>
        {{ include('blocks/movie/_bracket.html.twig') }}
        {% if from is defined %}
            {% if from in ['home', 'my_series', 'my_series_to_start', 'my_series_to_end', 'search'] %}
                <li class="breadcrumb-item"><a href="{{ path('app_serie_popular') }}">{{ 'Series'|trans }}</a></li>
                {{ include('blocks/serie/_bracket.html.twig') }}
            {% endif %}
        {% endif %}
        <li>
            {{ include('blocks/user/_breadcrumb.html.twig') }}
        </li>
        {% if parent is defined %}
            <li class="breadcrumb-item"><a href="{{ parent.url }}" accesskey="<">{{ parent.page|trans }}</a></li>
        {% endif %}
        <li class="breadcrumb-item active" aria-current="{{ thisPage }}">{{ thisPage }}</li>
    </ol>
    {% if from is defined %}
        {% if from == 'blog' %}
            {#                <div class="btn btn-secondary ml"><a href="{{ path('app_article_image_index') }}">{{ 'Images'|trans }}</a></div> #}
        {% endif %}
        {% if from == 'user movies' %}
            {% if collections|length %}
                <div class="choose-collection">
                    <label>{{ 'Pin a collection'|trans }}
                        <select>
                            <option value="0">{{ 'Select a collection'|trans }}</option>
                            {% for c in collections %}
                                <option value="{{ c.id }}"{% if settings %}{% if settings.data.0.collection_id == c.id %} selected{% endif %}{% endif %}>{{ c.title }} ({{ c.movies|length }})</option>
                            {% endfor %}
                        </select>
                    </label>
                    <label class="switch">
                        <input type="checkbox"{% if settings %}{% if settings.data.0.pinned %} checked{% endif %}{% endif %}/>
                        <span></span>
                    </label>
                </div>
            {% endif %}
        {% endif %}
        {% if from == 'profile' %}
            <div class="btn btn-secondary ml"><a href="{{ path('app_user_change_password') }}">{{ 'Change password'|trans }}</a></div>
        {% endif %}
    {% endif %}
</nav>
