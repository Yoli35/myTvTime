<div class="user"{% if scale is defined %} style="transform: scale({{ scale }})"{% endif %}>
    <div class="rating" id="{{ id }}">
        <div class="trash" data-rate="0"></div>
        <div class="star" data-rate="1"></div>
        <div class="star" data-rate="2"></div>
        <div class="star" data-rate="3"></div>
        <div class="star" data-rate="4"></div>
        <div class="star" data-rate="5"></div>
    </div>
    <div class="has-been-seen{% if seen %} yes{% endif %}" id="{{ id }}"><i class="fa-solid fa-circle-check"></i></div>
</div>
