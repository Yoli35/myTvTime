<div class="home-discover{% if todayAiring.serieArray.seasonArray.episode_number == 1 %} new-season{% endif %}" data-id="{{ todayAiring.serie.id }}">
    <a href="{{ path('app_serie_show', {'id': todayAiring.serie.id}) }}?from=today" title="{{ todayAiring.serie.name }}">
        <div>
            <img src="{{ imageConfig.url ~ imageConfig.poster_sizes.3 ~ todayAiring.serie.posterPath }}" alt="{{ 'Poster' }}">
            {% if todayAiring.serieArray.seasonArray.episode_number == 1 %}
                <div class="new-season">{{ 'New season'|trans }}</div>
            {% endif %}
        </div>
        <div class="title">
            <div>{{ todayAiring.serie.name }}</div>
        </div>
        {% for seasonNumber, value in todayAiring.seasons %}
            <div class="episode">
                <div>
                    {% if seasonNumber %}
                        {{ 'Season'|trans }} {{ seasonNumber }}
                    {% else %}
                        <span class="spe">{{ 'Specials'|trans }}</span>
                    {% endif %}
                    <br>
                    {% if value.episodes|length == 1 %}
                        {{ 'Episode'|trans }} {{ value.episodes.0 }}
                    {% else %}
                        {% if value.episodes|length == todayAiring.serieArray.seasonArray.seasonViewing.episodeCount %}
                            <span class="all">{{ 'All episodes'|trans }}</span>
                        {% else %}
                            {{ 'Episodes'|trans }}
                            {% for episode in value.episodes %}
                                {% if loop.last %}& {% endif %}{{ episode }}{% if loop.index < loop.length - 1 %},{% endif %}
                            {% endfor %}
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </a>
</div>
