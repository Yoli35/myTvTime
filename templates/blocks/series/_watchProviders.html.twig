<dialog id="watch-provider-dialog">
    <div class="content">
        <div class="dialog-title">{{ 'Where did you watch the series?'|trans }}</div>
        <form method="dialog">
            <input type="hidden" name="action" value="select"/>
            {% for wp in allWatchProviders %}
                <div class="watch-provider">
                    <label for="watch-provider-{{ wp.provider_id }}">
                        <input type="radio" id="watch-provider-{{ wp.provider_id }}" name="watch-provider" value="{{ wp.provider_id }}"/>
                        <div class="logo"><img src="{{ wp.logo_path }}" alt="{{ wp.provider_name }}"></div>
                        {{ wp.provider_name }}
                    </label>
                </div>
            {% endfor %}
            <div class="watch-provider">
                <label for="watch-provider--1">
                    <input type="radio" id="watch-provider--1" name="watch-provider" value="{{ 'Other'|trans }}"/>
                    {{ 'Other'|trans }}
                </label>
            </div>
            <menu>
                <li>
                    <button class="btn btn-secondary" value="cancel">{{ 'Cancel'|trans }}</button>
                </li>
                <li>
                    <button class="btn btn-primary" value="select">{{ 'Select'|trans }}</button>
                </li>
            </menu>
        </form>
    </div>
</dialog>
