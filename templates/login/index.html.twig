{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container vh-100">
        <div class="login">
            <div class="card">
                <form action="{{ path('app_login') }}" method="post">
                    <div class="card-header"><h5>{{ 'Connexion'|trans }}</h5></div>
                    <div class="card-body">
                        {% if error %}
                            <p class="card-text">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                        {% endif %}
                        <div class="input-group mb-3">
                            <label for="username"><span class="input-group-text" id="basic-addon1">Email:</span> </label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="{{ 'Email' }}" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <div class="input-group mb-3">
                            <label for="password"><span class="input-group-text" id="basic-addon1">{{ 'Password:'|trans }}</span> </label>
                            <input type="password" id="password" name="_password" value="{{ last_username }}" class="form-control" placeholder="{{ 'Password' }}" aria-label="Password" aria-describedby="basic-addon1">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-secondary">{{ 'Login'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
