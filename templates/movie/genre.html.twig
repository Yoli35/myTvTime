{% extends 'base.html.twig' %}
{% block morecss %}
    {#    <link href="{{ asset("movie.css") }}" rel="stylesheet"> #}
{% endblock %}

{% block title %}myTvTime::{{ 'Movies by genre'|trans }}{% endblock %}
{% block body %}
    {#    {{ dump() }} #}
    <div class="container">

        {{ include('blocks/pageHeader.html.twig') }}

        <div class="home-header bg{{ random(5) }}"></div>

        <nav aria-label="{{ 'Navigation'|trans }}" class="nav-breadcrumb" style="--bs-breadcrumb-divider: 'â—¦';">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'Movies'|trans }}</a></li>
                {{ include('blocks/movie/bracket.html.twig') }}
                <li class="breadcrumb-item active" aria-current="{{ 'Search by Genre'|trans }}">{{ 'Search by Genre'|trans }}</li>
            </ol>
        </nav>

        <div class="genres">
            {% for key, genre in possible_genres.genres %}
                <div id="{{ genre.id }}" class="genre{{ genre.id in current_genres ? ' active':'' }}">{{ genre.name }}</div>
            {% endfor %}
        </div>
        <div class="home-discovers">
            {{ include('blocks/genrePaging.html.twig') }}
            <div class="content">
                {% for discover in discovers.results %}
                    {% if discover.poster_path is defined and discover.poster_path|length %}
                        {% set poster = imageConfig.url ~ imageConfig.poster_sizes.3 ~ discover.poster_path %}
                    {% else %}
                        {% set poster = "/images/default/no_poster_dark.png" %}
                    {% endif %}
                    {{ include('blocks/movie/discover.html.twig', { title: discover.title, poster: poster, id: discover.id, route: 'app_movie' }) }}
                {% endfor %}
            </div>
            {{ include('blocks/genrePaging.html.twig') }}
        </div>
        {{ include('blocks/pageFooter.html.twig') }}
    </div>
{% endblock %}
{% block morejs %}
    <script>
        window.addEventListener("DOMContentLoaded", () => {

            const genres = document.querySelectorAll(".genre");

            genres.forEach((genre) => {
                genre.addEventListener("click", () => {
                    genre.classList.toggle("active");

                    let list = '', url = '{{ path(route, {page: 1, genres: 28}) }}';

                    genres.forEach((genre) => {
                        if (genre.classList.contains("active")) {
                            list += genre.getAttribute("id") + ',';
                        }
                    })
                    list = list.length ? list.substring(0, list.length - 1) : '1';
                    url = url.substring(0, url.length - 2) + list;
                    window.location.href = url;
                })
            })

            document.querySelector(".home-header").setAttribute("style", "background-position-y: top");
        })
    </script>
{% endblock %}