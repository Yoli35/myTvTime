{% extends 'base.html.twig' %}

{% block title %}Serie{% endblock %}

{% block body %}
    <h1>Serie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ serie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ serie.name }}</td>
            </tr>
            <tr>
                <th>PosterPath</th>
                <td>{{ serie.posterPath }}</td>
            </tr>
            <tr>
                <th>SerieId</th>
                <td>{{ serie.serieId }}</td>
            </tr>
            <tr>
                <th>FirstDateAir</th>
                <td>{{ serie.firstDateAir ? serie.firstDateAir|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Network</th>
                <td>{{ serie.network }}</td>
            </tr>
            <tr>
                <th>NetworkLogoPath</th>
                <td>{{ serie.networkLogoPath }}</td>
            </tr>
            <tr>
                <th>AddedAt</th>
                <td>{{ serie.addedAt ? serie.addedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_serie_index') }}">back to list</a>

    <a href="{{ path('app_serie_edit', {'id': serie.id}) }}">edit</a>

    {{ include('serie/_delete_form.html.twig') }}
