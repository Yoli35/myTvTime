            function convertSeconds(seconds) {
                let months = Math.floor(seconds / 2628000);
                seconds -= months * 2628000;
                let days = Math.floor(seconds / 86400);
                seconds -= days * 86400;
                let hours = Math.floor(seconds / 3600);
                seconds -= hours * 3600;
                let minutes = Math.floor(seconds / 60);
                seconds -= minutes * 60;
                return {
                    months: months,
                    days: days,
                    hours: hours,
                    minutes: minutes,
                    seconds: seconds
                };
            }

