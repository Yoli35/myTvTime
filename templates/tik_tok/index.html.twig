{% extends 'base.html.twig' %}

{% block title %}{{ 'my TvTime::TikTok' }}{% endblock %}
{% set user = app.user %}

{% block body %}
    {#    {% if app.debug=='dev' %}{{ dump() }}{% endif %} #}
    <div class="container-fluid">

        {{ include('blocks/pageHeader.html.twig') }}

        <div class="container">
            <nav aria-label="{{ 'Navigation'|trans }}" class="nav-breadcrumb" style="--bs-breadcrumb-divider: 'â—¦';">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'Homepage'|trans }}</a></li>
                    <li class="breadcrumb-item active" aria-current="{{ 'My TikTok Videos'|trans }}">{{ 'My TikTok Videos'|trans }}</li>
                </ol>
            </nav>
        </div>
        <div class="tt-videos">
            {{ component('tik_tok_add_video', {class: 'getter', 'id': user.id, 'locale': locale}) }}
        </div>
        <script>
            $(function () {
                let link = $('input[name="link"]');
                $(link).change(function () {
                    setTimeout(function () {
                        $(link).val("");
                    }, 1000);
                })
            })
        </script>

        {{ include('blocks/pageFooter.html.twig') }}

    </div>
{% endblock %}
